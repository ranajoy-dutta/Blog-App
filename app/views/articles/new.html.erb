<h1 class="text-center display-4">New Article</h1>
<br><br>
<div class="container">
  <%#= form_with scope: :toform, url: articles_path, html: { multipart: true }, local: true do |form| %>
  <%#= form_for @toform, url: articles_path do |form| %>
  <%= bootstrap_form_for @toform, url: articles_path, html: { multipart: true }, local: true do |f| %>
    <% if @toform.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@toform.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @toform.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <b><%= f.file_field :image, label: "Upload Image" %>
    <%= f.text_field :title %>
    <%= f.text_area :body, label: "Content" %></b>
    <%= f.submit "Publish", :class => "btn btn-info btn-md" %>
    <%= link_to 'Back', root_path,:class => "btn btn-primary btn-md" %>
  <% end %>
</div>



